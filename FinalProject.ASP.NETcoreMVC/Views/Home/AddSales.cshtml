@model FinalProject.ASP.NETcoreMVC.Models.QuarterlySales

@{
    ViewData["Title"] = "AddSales";
}
<h2 class="p-2">Add Sales</h2>

<form asp-action="AddSalesForm" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label>Quarter</label>
    <input asp-for="Quarter" class="form-control" type="number" placeholder=0 />
    <label class="mt-5">Year</label>
    <input asp-for="Year" class="form-control" type="number" placeholder=0 />
    <label class ="mt-5">Amount</label>
    <input asp-for="Amount" class="form-control" type="number" placeholder=0 />
    <label class="mt-5">Employee</label>
    <input class="form-control" type="search" placeholder="Employee" />
    <button class="btn btn-primary" type="submit">Add</button>
   <button class="btn btn-secondary" type="reset">Cancel</button>
   
</form>

